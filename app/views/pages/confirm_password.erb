<h1 class="text-center mb-4 mt-4">Confirm delete account</h1>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%=form_with( model: current_user, method: :delete, class:'shadow p-3 mb-3 bg-info rounded', local: true) do |f|%>
        
        <div class="form-group row">
          <%=f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%=f.password_field :password, rows: 10, class:"form-control shadow rounded", placeholder: "Password"%>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%=f.submit 'Delete Account', class: 'btn btn-outline-light btn-lg'%>
        </div>
      <%end%>
    </div>
  </div>
</div>

